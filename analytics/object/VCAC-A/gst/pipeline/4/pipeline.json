{
    "name": "object_detection",
    "version": 4,
    "type": "GStreamer",
    "template": [
        "urisourcebin buffer_size=4096  name=\"source\" ! flvdemux name=demux demux.video ! h264parse ! video/x-h264 ! tee name=t ",
        "! queue2 ! decodebin ! video/x-raw(memory:VASurface) ! vaapipostproc brightness=0.0001 ",
        "! queue leaky=upstream ",
        "! gvadetect pre-process-backend=vaapi model=\"{models[person_detection_2020R2][1][network]}\" model-proc=\"{models[person_detection_2020R2][1][proc]}\" name=\"detection\" ",
        "! queue ! gvametaconvert name=\"metaconvert\" ! queue ! gvametapublish name=\"destination\" ",
        "! appsink name=appsink t. ! queue2 max-size-time=60500000000 ! splitmuxsink max-size-time=60500000000 name=\"splitmuxsink\""
    ],
    "description": "Object Detection Pipeline",
    "parameters": {
        "type": "object",
        "properties": {
            "inference-interval": {
                "element": "detection",
                "type": "integer",
                "minimum": 0,
                "maximum": 4294967295
            },
            "cpu-throughput-streams": {
                "element": "detection",
                "type": "string"
            },
            "n-threads": {
                "element": "videoconvert",
                "type": "integer"
            },
            "nireq": {
                "element": "detection",
                "type": "integer",
                "minimum": 1,
                "maximum": 64,
                "default": 3
            },
            "device": {
                "element": "detection",
                "default": "HDDL",
                "type": "string"
            },
            "recording_prefix": {
                "type": "string",
                "default": "recording"
            }
        }
    }
}
